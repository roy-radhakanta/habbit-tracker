<% if(habits.length){ %> <% habits.forEach(habit => { const date = new Date(habit.createdAt); %>
<div class="habit">
  <div class="flex aic habit-wrap">
    <div class="habit__info">
      <div class="habit__name"><%=habit.habit%></div>
      <div class="habit__creation-date"><%=
      date.toLocaleString('en-US', {
        year: 'numeric',
        month: 'short',
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
      });
      %></div>
      <div class="habit__creation__info">
        <div class="flex aic">
          <div class="habit__creation__info__achieve">Daily</div>
          <div class="habit__creation__info__achieve">5 done</div>
        </div>
      </div>
    </div>
    <div class="habit__action">
      <button class="button habitDone" data-h="<%=habit._id%>">
        <img src="/images/checked.svg" alt="Done" />
      </button>
      <button class="button habitNotDone" data-h="<%=habit._id%>">
        <img src="/images/close.svg" alt="" />
      </button>
    </div>
  </div>
</div>
<% }); %> <% } %>
